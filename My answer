/* style.css */

/* ID Selector */
#main-header {
    background-color: #4CAF50;
    color: white;
    padding: 20px;
    text-align: center;
    font-family: 'Arial', sans-serif;
}

/* Class Selector */
.content {
    margin: 20px;
    padding: 15px;
    border: 2px solid #ccc;
    font-family: 'Verdana', sans-serif;
    font-size: 16px;
    line-height: 1.6;
}

/* Element Selector */
footer p {
    text-align: center;
    color: gray;
    font-family: 'Courier New', monospace;
}

/* Styling an image */
.styled-image {
    width: 100%;
    max-width: 600px;
    border: 3px solid #333;
    border-radius: 8px;
    margin-top: 10px;
}
